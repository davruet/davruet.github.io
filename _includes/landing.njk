title: David Rueter
url: https://davidrueter.com
img: /static/br.jpg
alt: Documentation of works by artist David Rueter
layout: base.njk
---

{% import "workText.njk" as wt %}

<style>    
    .grid {
        width: 100%; 
        margin 0;
    }
    @media (min-width: 960px){
        .grid-item {
            width: calc((33% - 10px));
            padding-bottom: 20px;
         }
        
    }
    @media (max-width: 960px){
        .grid-item { 
            width: 100%;
            padding-bottom: 1em;
        }
    }

    .grid-item-caption {
    }
    
    .showInfo {
        padding-bottom: 1em;
    }
   
    
</style>
<link rel="stylesheet" href="https://vjs.zencdn.net/8.0.4/video-js.css">


<div id="home" class="content">

    <div class="grid" id="grid">
    {% asyncEach item in collections.images | reverse %}
    {% asyncEach im in item.data.images %}
         <div class="grid-item" id="{% if im.id %}{{im.id}}{% else %}{{(wt.workInfo(item.data.works,im.workid, "Name") + "-" + loop.index + "")  | striptags | slug}} {%endif%}">
            {% set works = item.data.works %}
            {% set urlbase = item.data.page.url %}
            {% set linkTarget = item.data.page.url %}
            {% set autoFillCaption =  true %}
            {% set gridImage = im %}
            {% include "gridItem.njk" %}
            
        </div>
    {% endeach %}
    {% endeach %}
    </div>
</div>
    
    <script src="https://vjs.zencdn.net/8.0.4/video.min.js"></script>
    <script src="https://unpkg.com/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"></script>
    <script src="https://unpkg.com/imagesloaded@5/imagesloaded.pkgd.min.js"></script>
    <script>
        setTitleColor("#000");
        var elem = document.querySelector('.grid');
        var mry = new Masonry( elem, {
        // options
        itemSelector: '.grid-item',
        gutter: 20,
        percentPosition: true,
        //isFitWidth: true
        //columnWidth: '.grid-sizer'
        });

        
        imagesLoaded(document.querySelector('.grid')).on('progress', ()=>{
            mry.layout();
        });
        mry.layout();
    </script>
            
<div class="content textblock">
    {{content | safe}}
