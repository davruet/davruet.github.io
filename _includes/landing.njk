{% import "workText.njk" as wt %}

<style>    
    .grid {
        width: 100%; 
        margin 0;
    }
    @media (min-width: 960px){
        .grid-item {
            width: calc((33% - 10px));
            padding-bottom: 20px;
         }
        
    }
    @media (max-width: 960px){
        .grid-item { 
            width: 100%;
            padding-bottom: 1em;
        }
    }

    .grid-item-caption {
    }
    
    .showInfo {
        padding-bottom: 1em;
    }
   
    
</style>
<link rel="stylesheet" href="https://vjs.zencdn.net/8.0.4/video-js.css">


<div id="home" class="content textblock">
    
    {% image "./"  + "titles/a-conversation-between-machines/_DSC5667-2.jpg", "", "100%"%} <br>

    <h2>selected works</h2><br>

    {% asyncEach item in collections.images | reverse %}
    <div>
        <a href="{{item.data.page.url | url}}"><div class="landingList">{{item.data.pageTitle}}, {{item.data.page.date.getFullYear()}}</div></a>{%if item.data.location %}&nbsp;|&nbsp;<div class="landingListLocation">{{item.data.location}}</div>{%endif%}
    </div>
    {% endeach %}
    
    </div>
</div>
    
    <script src="https://vjs.zencdn.net/8.0.4/video.min.js"></script>
    <script src="https://unpkg.com/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"></script>
    <script src="https://unpkg.com/imagesloaded@5/imagesloaded.pkgd.min.js"></script>
    <script>
        setTitleColor("#000");
        var elem = document.querySelector('.grid');
        var mry = new Masonry( elem, {
        // options
        itemSelector: '.grid-item',
        gutter: 20,
        percentPosition: true,
        //isFitWidth: true
        //columnWidth: '.grid-sizer'
        });

        
        imagesLoaded(document.querySelector('.grid')).on('progress', ()=>{
            mry.layout();
        });
        mry.layout();
    </script>
            
<div class="content textblock">
    {{content | safe}}
